{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Cache)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/OcelotGatewayDemo.Api.Cache/bin/Debug/net7.0/OcelotGatewayDemo.Api.Cache.dll",
            "args": [],
            "cwd": "${workspaceFolder}/OcelotGatewayDemo.Api.Cache",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },        
        {
            "name": ".NET Core Launch (Gateway)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/OcelotGatewayDemo.Api.Gateway/bin/Debug/net7.0/OcelotGatewayDemo.Api.Gateway.dll",
            "args": [],
            "cwd": "${workspaceFolder}/OcelotGatewayDemo.Api.Gateway",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}